<p id="notice"><%= notice %></p>

<div class="main container">
  <div class="question container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center"><%= @question.title %><h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-2">
        <h4><%= @question.user.email %> Asked at <%= @question.created_at %>:</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <a href="#" class="up_question_voteLink" data-question="<%= @question.id %>">Up</a>
        </br>
        <span id="result_<%= @question.id %>"><%= @question.quscores.sum('point') %></span>
        </br>
        <a href="#" class="down_question_voteLink" data-question="<%= @question.id %>">Down</a>
      </div>
      <div class="col-md-10">
        <h5> <%= @question.content %> </h5>
      </div>
    </div>
  </div>
  </br>
  <div class="answer container">
    <% @question.answers.each do |answer| %>
    <div class="row">
      <div class="col-md-2">
        <a href="#" class="up_answer_voteLink" data-answer="<%=answer.id%>">Up</a>
        </br>
        <span id="result_<%= answer.id %>"> <%= answer.anscores.sum('point')%></span>
        </br>
        <a href="#" class="down_answer_voteLink" data-answer="<%=answer.id%>">Down</a>
      </div>
      <div class="col-md-10">
        <p><%= answer.user.email %> Responded with:</p>
        <p><%= answer.content %></p>
      </div>
    </div>
  </div>
  </br>
  <% end %>
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <%= link_to 'Back To Questions', questions_path %>
    </div>
  </div>
</div>

<div id="questionModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Please login</h4>
      </div>
      <div class="modal-body">
        <p>Please Login in order to vote for Questions or answers.&hellip;</p>
        <p> <%= link_to "Click here to login" , new_user_session_path %> </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

