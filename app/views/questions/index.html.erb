<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p><b>Explore Our Questions</b></p>
    </div>
  </div>
  <% @questions.each do |question| %>
  <div class="qtop row">
    <div class="col-md-1">
      <p class="text-center"><%= question.num_votes %></p>
    </div>
    <div class="col-md-1">
      <p class="text-center"><%= question.num_answers %></p>
    </div>
    <div class="col-md-9 col-md-offset-1">
      <p><%= link_to question.title, question %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
      <p class="text-center">Votes</p>
    </div>
    <div class="col-md-1">
      <p class="text-center">Answers</p>
    </div>

    <div class="col-md-5 col-md-offset-1">
      <p>Question Created On: <%= question.created_at %></p>
    </div>
    <div class="col-md-4">
      <p>By: <%= question.user.email %></p>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
<%= paginate @questions %>
  </div>
</div>
