<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">All Users</h1>
    </div>
  </div>
  <br/>
  <div class="container">
    <% @users.each_with_index do |user, index| %>
    <% if index % 2 == 0 %>
    <div class="row">
      <div class="col-md-1 col-md-offset-1">
        <%= image_tag avatar_url(user) %>
      </div>
      <div class="col-md-3 col-md-offset-1">
        <p><%= user.email %>
      </div>
    <% else %>
      <div class="col-md-1 col-md-offset-1">
        <%= image_tag avatar_url(user) %>
      </div>
      <div class="col-md-3 col-md-offset-1">
        <p><%= user.email %>
      </div>
    </div>
    <br/>
      <% end %>
    <% end %>
  </div>
  <br/>
  <div class="row">
    <%= paginate @users %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= link_to 'Back To Questions', questions_path %></p>
    </div>
  </div>
</div>
